        <classes>
            <class name="com.demo.tests.TestCase_02_UserLogin">
                <methods>
                    <include name="api_bootstrap"/>
                    <include name="create_new_user"/>
                    <include name="login"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>




